<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="egzamin5.MainPage">

    <StackLayout>
        <Label Text="Sortowanie Tablic" TextColor="black" FontSize="20"></Label>
        <Image Source="sortowanie.jpg" WidthRequest="150" ></Image>
        <Button x:Name="createTable" Text="Stworz Tablice" Background="darkgray" Clicked="createTable_Clicked"></Button>
        <Label x:Name="viewRandomTab" FontSize="18" TextColor="Black"></Label>

        <Button Text="Sortuj" x:Name="sortTable" BackgroundColor="DarkGray" Clicked="sortTable_Clicked"></Button>
        <Label Text="Tablica po sortowaniu" FontSize="20" TextColor="Black"></Label>
        <Label x:Name="viewSortedTab" FontSize="18" TextColor="Black"></Label>
        <Label Text="Lista Krokow" FontSize="20" TextColor="Black"></Label>
        <Label x:Name="stepsAmount" FontSize="18" TextColor="Black"></Label>
    </StackLayout>

</ContentPage>
